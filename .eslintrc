{
  "root": true,
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "env": {
    "browser": true
  },
  "plugins": [
    "html",
    "vue"
  ],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "no-param-reassign": "off",
    "no-restricted-properties": "off"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": {
        "mocha": true
      },
      "globals": {
        "Vue": true,
        "expect": true
      },
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
